#!/usr/bin/env bash
# Author: Aaron Kuehler
# Purpose: Configures the environment by setting commonly referenced environment variables.

# Set the default EDITORs
export EDITOR=emacs

# Set default home for this configuration
export DOTFILES_HOME=$BASE_CONFIG_PATH
export DOTFILES_THIRD_PARTY_HOME=$DOTFILES_HOME/third_party

# Setup the user's path
# Binaries in /usr/local take precedence
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# Add user's custom binaries to the path
export PATH=$PATH:$BASE_CONFIG_PATH/scripts
